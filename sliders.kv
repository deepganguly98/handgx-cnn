#: kivy 1.10.1

<HslSliderApp>:
    canvas:
        Rectangle:
            source: 'images/texture2.jpg'
            pos: self.pos
            size: self.size
	BoxLayout:
		orientation: 'horizontal'
		BoxLayout:
			orientation: 'vertical'
			height: 100
			KivyCamera:
				id: qrcam
			Label:
				text: "Threshold value"
				size_hint: (1, None)
				height: self.texture_size[1]
			Slider:
				id: thresh
				min: 0
				max: 255
				value: 128
				size_hint: (1, None)
				on_value: root.thresh_change(thresh.value)
		BoxLayout:
            orientation:"vertical"
            height:100
            KivyCamera:
                id: qrcam1
		BoxLayout:
			orientation: 'vertical'	
			Label:
				text: 'UPPER'
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: 'Hue'
				Slider:
					size_hint: (1, None)
					id: u_hue 
					min: 0
					max: 255
					value: 15
					on_value: root.slider_change_u_hue(u_hue.value)
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: 'Saturation'
				Slider:
					size_hint: (1, None)
					id: u_saturation
					min: 0
					max: 255
					value: 15
					on_value: root.slider_change_u_saturation(u_saturation.value)
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: 'Value'
				Slider:
					size_hint: (1, None)
					id: u_value
					min: 0
					max: 255
					value: 15
					on_value: root.slider_change_u_value(u_value.value)
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'LOWER'
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: 'Hue'
				Slider:
					size_hint: (1, None)
					id: l_hue
					min: 0
					max: 255
					value: 15
					on_value: root.slider_change_l_hue(l_hue.value)
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: 'Saturation'
				Slider:
					size_hint: (1, None)
					id: l_saturation
					min: 0
					max: 255
					value: 15
					on_value: root.slider_change_l_saturation(l_saturation.value)
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: 'Value'
				Slider:
					size_hint: (1,None)
					id: l_value
					min: 0
					max: 255
					value: 15	
					on_value : root.slider_change_l_value(l_value.value)	